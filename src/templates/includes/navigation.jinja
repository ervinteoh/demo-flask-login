<nav class="bg-white drop-shadow lg:drop-shadow-none">
  <div class="container py-4 md:py-6">
    <div class="flex items-center">
      <div class="flex items-center flex-auto">
        <a href="/" class="inline-flex items-center gap-x-4">
          <object data="{{ url_for('static', filename='img/logo/company.svg') }}"
            width="40" height="40" alt="Company Logo" title="Company Logo"
            class="pointer-events-none">
          </object>
          <span class="hidden wordmark md:block">
            <strong>Flask</strong>Login
          </span>
        </a>
      </div>
      <div class="flex-auto text-right">
        {% if current_user.is_authenticated %}
        <form action="{{ url_for('account.logout') }}" method="POST">
          {# <input type="hidden" name="csrf_token" value="{{ csrf_token() }}"> #}
          <button type="submit" name="submit" class="btn btn-primary">Sign Out</button>
        </form>
        {% else %}
        <a href="{{ url_for('account.login') }}"
          class="hidden btn btn-none-secondary sm:inline-block">Sign In</a>
        <a href="{{ url_for('account.register') }}" class="btn btn-primary">Sign Up</a>
        {% endif %}
      </div>
    </div>
  </div>
</nav>
