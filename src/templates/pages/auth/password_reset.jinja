{% from "includes/scripts.jinja" import input, checkbox with context %}
{% extends "layouts/auth.jinja" %}
{% set title = "Password Reset" %}
{% set heading = "Password Reset" %}

{% block form %}
<div class="w-full max-w-lg px-6 mb-4">
  {% include "includes/flash_alerts.jinja" %}
</div>
<form action="" id="passwordResetForm" method="POST" class="w-full max-w-lg mt-4 px-6">
  {{ form.csrf_token }}
  <div class="mb-6">
    {{ input(form.password) }}
  </div>
  <div class="mb-6">
    {{ input(form.confirm_password) }}
  </div>
  {{ form.submit(class_="w-full") }}
</form>
{% endblock form %}
